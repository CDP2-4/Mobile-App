<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:paddingBottom="10dp"
        android:background="@drawable/rect_50_blue"
        android:text="     S-CHEMI\n     빠르고 안전한 재고관리"
        android:textColor="#ffffffff"
        android:gravity="bottom"
        android:textStyle="bold"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
            android:id="@+id/main_tv_member_modify"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rect_round_50_gray_empty"
            android:text="회원정보 수정"
            android:textColor="#000000"
            android:textSize="17dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/main_tv_logout"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rect_round_50_gray_empty"
            android:text="로그아웃"
            android:textColor="#000000"
            android:textSize="17dp"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/main_tv_warehouse"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rect_round_50_gray_empty"
        android:drawableLeft="@drawable/main_warehouse_mini"

        android:paddingLeft="50dp"
        android:text="\n\n\n\n\n\n창고 입출입"
        android:textColor="#000000"
        android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/main_tv_recieve"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="50dp"

            android:background="@drawable/rect_round_50_gray_empty"
            android:drawableLeft="@drawable/main_recieve_mini"
            android:gravity="center"
            android:text="입고"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/main_tv_release"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="50dp"

            android:background="@drawable/rect_round_50_gray_empty"
            android:drawableLeft="@drawable/main_release_mini"
            android:gravity="center"
            android:text="출고"
            android:textColor="#000000"
            android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>